<%- include('Partials/header.ejs'); %>
<div class="wrapper-container">
    <%- include('Partials/navbar.ejs'); %>

    <!-- contact section -->
    <section id="contact-me" class="contact-section">
        <p style="margin-top: 80px; margin-bottom: 50px;">I hope you like my profile.
             If you have any suggestions feel free to contact me.
             <br>
             Thank You:)</p>
        <div class="contact-form-div">
            <h2>Contact Me</h2>
            <!-- contact form -->
            <form class="contact-me-form" action="/" method="get">
                <div class="row">
                    <label for="name">First Name : </label>
                    <input type="text" id="fname">
                </div>
                <div class="row">
                    <label for="name">Last Name : </label>
                    <input type="text" id="lname">
                </div>
                <div class="row">
                    <label for="name">Phone : </label>
                    <input type="text" id="phone">
                </div>
                <div class="row">
                    <label for="email">Email : </label>
                    <input type="email" id="email" value="">
                </div>
                <div class="row">
                    <label for="message">Message : </label>
                    <textarea id="message" rows="8" cols="118"></textarea>
                </div>
                <!-- submit button -->
                <button class="submit-btn" type="submit" name="button">SUBMIT</button>
            </form>
        </div>
    </section>
</div>
<%- include('Partials/footer.ejs'); %>